<h1>New Task</h1>

<%= turbo_frame_tag "new_task", target: "_top" do %>
    <%= form_with(model: [ @task.task_list, @task ], data: {
        controller: 'reset_form', action: 'turbo:submit-end->reset_form#reset'
    }) do |form| %>
        <div class="field">
            <%= form.text_field :content %>
            <%= form.submit "Create" %>
        </div>
    <% end %>
<% end %>

<%= link_to "Back", @task.task_list %>